    "@cyrilolanolan/eslint-config-ts": "0.1.3",
    "@cyrilolanolan/prettier-config": "0.1.3",
    "eslint": "8.57.0",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "typescript": "5.4.2"

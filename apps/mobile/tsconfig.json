{
  "extends": ["expo/tsconfig.base", "../../tsconfig.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["./*"]
    }
  },
  "include": ["src/**/*", "app/**/*", ".storybook/**/*"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "tailwind.config.js",
    ".eslintrc.js"
  ]
}
